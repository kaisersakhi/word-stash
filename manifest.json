{
  "manifest_version": 3,
  "name": "Word Stash",
  "version": "1.0",
  "description": "Save words from any webpage with their meanings.",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "commands": {
    "save-word": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Save selected word"
    }
  },
  "action": {
    "default_icon": {
      "16": "assets/icons/icon.png",
      "48": "assets/icons/icon.png",
      "128": "assets/icons/icon.png"
    },
    "default_title": "My Dictionary"
  }
}
